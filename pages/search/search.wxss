page {
  height: 100vh;
  background:
    radial-gradient(circle at top left, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  color: var(--ink);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 22rpx;
  margin-bottom: 18rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.auth-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.auth-text {
  color: var(--muted);
  font-size: 23rpx;
}

.auth-btn {
  background: var(--brand) !important;
  color: #fff !important;
}

.search-input {
  height: 88rpx;
  padding: 0 24rpx;
  line-height: 88rpx;
  border-radius: 14rpx;
  background: var(--surface-soft);
  font-size: 26rpx;
  box-sizing: border-box;
}

.category-scroll {
  margin-top: 16rpx;
  white-space: nowrap;
}

.category-pill {
  display: inline-block;
  margin-right: 16rpx;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: #edf5f3;
  color: #2e6059;
  font-size: 24rpx;
}

.category-pill.active {
  background: var(--brand);
  color: #fff;
}

.item-card {
  position: relative;
  margin-bottom: 14rpx;
  padding-bottom: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-title {
  font-size: 28rpx;
  font-weight: 700;
}

.badge {
  font-size: 20rpx;
  color: var(--brand);
  background: var(--brand-weak);
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

.item-desc {
  margin-top: 10rpx;
  font-size: 23rpx;
  color: #374151;
}

.item-owner {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 22rpx;
}

.item-footer {
  margin-top: 14rpx;
  display: block;
  font-size: 23rpx;
  padding-right: 220rpx;
  padding-bottom: 6rpx;
}

.item-price {
  line-height: 1.45;
}

.borrow-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
  position: absolute;
  right: 22rpx;
  bottom: 22rpx;
}

.empty {
  text-align: center;
  color: var(--muted);
}
