page {
  min-height: 100vh;
  background:
    radial-gradient(circle at top right, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
}

.page {
  padding: 24rpx;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 18rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.name {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.role-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #dff3ee;
  color: #0f766e;
}

.meta {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 24rpx;
}

.stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 14rpx;
}

.stat {
  margin-bottom: 0;
  text-align: center;
}

.value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--brand);
}

.label {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 22rpx;
}

.actions button {
  margin-top: 10rpx;
}

.auth-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
}

.msg-btn {
  background: #b45309 !important;
  color: #ffffff !important;
}

.logout-btn {
  background: #64748b !important;
  color: #ffffff !important;
}

.manage-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 14rpx;
}

.sub-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  margin: 14rpx 0 10rpx;
}

.manage-item {
  background: var(--surface-soft);
  border-radius: 14rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.manage-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.manage-name {
  font-size: 25rpx;
  font-weight: 600;
  color: #0f172a;
}

.manage-status {
  font-size: 20rpx;
  color: #0f766e;
  background: #dff3ee;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.manage-status.hidden {
  color: #b45309;
  background: #fef3c7;
}

.manage-meta {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--muted);
}

.manage-reason {
  margin-top: 6rpx;
  font-size: 21rpx;
  color: #b45309;
}

.manage-btn {
  margin-top: 10rpx;
  background: var(--brand) !important;
  color: #ffffff !important;
}

.empty {
  color: var(--muted);
  font-size: 22rpx;
}
