page {
  height: 100vh;
  background:
    radial-gradient(circle at top right, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  color: var(--ink);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  margin: 16rpx 0 18rpx;
  letter-spacing: 1rpx;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.item-card {
  position: relative;
  padding-bottom: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
}

.item-owner {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 22rpx;
}

.item-description {
  margin: 16rpx 0;
  color: #374151;
  font-size: 24rpx;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  background: #edf5f3;
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
  color: #2e6059;
}

.badge {
  font-size: 20rpx;
  color: #0f766e;
  background: var(--brand-weak);
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

.item-footer {
  margin-top: 16rpx;
  display: block;
  color: #374151;
  font-size: 24rpx;
  padding-right: 220rpx;
  padding-bottom: 6rpx;
}

.item-price {
  line-height: 1.45;
}

.action-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
}

.demand-title {
  font-size: 28rpx;
  font-weight: 700;
}

.demand-meta {
  color: var(--muted);
  margin-top: 8rpx;
  font-size: 22rpx;
}

.demand-reward {
  margin-top: 8rpx;
  color: #b45309;
  font-size: 24rpx;
}

.demand-desc {
  margin-top: 8rpx;
  color: #374151;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  color: var(--muted);
}
