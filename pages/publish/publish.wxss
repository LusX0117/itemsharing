page {
  min-height: 100vh;
  background:
    radial-gradient(circle at top right, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
}

.page {
  padding: 24rpx;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.switcher {
  display: flex;
  gap: 14rpx;
  margin-bottom: 18rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 12rpx;
  background: #edf5f3;
  color: #2e6059;
  font-size: 24rpx;
  font-weight: 600;
}

.tab.active {
  background: var(--brand);
  color: #fff;
}

.empty {
  text-align: center;
}

.empty-title {
  color: var(--muted);
  font-size: 26rpx;
}

.auth-btn {
  margin-top: 14rpx;
  background: var(--brand) !important;
  color: #fff !important;
}

.panel-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
}

.panel-input,
.panel-picker,
.panel-textarea {
  width: 100%;
  background: var(--surface-soft);
  border-radius: 14rpx;
  font-size: 24rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.panel-input,
.panel-picker {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 22rpx;
}

.panel-textarea {
  min-height: 140rpx;
  padding: 14rpx 18rpx;
}

.submit-btn {
  margin-top: 8rpx;
  background: var(--brand) !important;
}
