page {
  height: 100vh;
  background:
    radial-gradient(circle at top left, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  color: var(--ink);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 22rpx;
  margin-bottom: 18rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.item-meta {
  font-size: 23rpx;
  color: var(--muted);
  margin-top: 6rpx;
}

.status-tip {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #b45309;
  line-height: 1.4;
}

.action-row {
  margin-top: 12rpx;
  display: flex;
  gap: 10rpx;
}

.section-title {
  font-size: 27rpx;
  font-weight: 700;
  margin-bottom: 14rpx;
}

.chat-list {
  height: 520rpx;
  padding-bottom: 4rpx;
  padding-right: 4rpx;
}

.timeline {
  border-left: 2rpx solid #d7e7e3;
  margin-left: 10rpx;
  padding-left: 18rpx;
}

.timeline-item {
  position: relative;
  margin-bottom: 16rpx;
}

.timeline-marker {
  font-size: 20rpx;
  color: #64748b;
  text-align: center;
  margin: 8rpx 0 14rpx;
}

.timeline-dot {
  position: absolute;
  left: -25rpx;
  top: 10rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #93c5bd;
}

.timeline-dot.mine {
  background: #0f766e;
}

.timeline-dot.system {
  background: #f59e0b;
}

.timeline-content {
  background: #f8fbfa;
  border: 1rpx solid #e5eeeb;
  border-radius: 14rpx;
  padding: 12rpx 14rpx;
}

.timeline-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.timeline-name {
  font-size: 22rpx;
  color: #334155;
  font-weight: 600;
}

.timeline-time {
  font-size: 20rpx;
  color: #94a3b8;
}

.timeline-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
  color: #0f172a;
}

.timeline-text.mine {
  color: #0b766c;
}

.timeline-text.system {
  color: #92400e;
}

.composer {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.composer-input {
  flex: 1;
  background: var(--surface-soft);
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}

.composer-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
}

.agree-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
}

.reject-btn {
  background: #b91c1c !important;
  color: #ffffff !important;
}

.return-btn {
  background: #0ea5e9 !important;
  color: #ffffff !important;
}

.camera-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
  margin-bottom: 12rpx;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #e2e8f0;
}

.compare-row {
  display: flex;
  gap: 12rpx;
  margin-bottom: 14rpx;
}

.compare-col {
  flex: 1;
}

.compare-label {
  font-size: 22rpx;
  color: #374151;
  margin-bottom: 8rpx;
}

.compare-photo,
.compare-empty {
  width: 100%;
  height: 220rpx;
  border-radius: 12rpx;
}

.compare-empty {
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--surface-soft);
  color: #94a3b8;
  font-size: 22rpx;
}

.empty {
  color: var(--muted);
  font-size: 23rpx;
}

.missing-page {
  padding: 48rpx 24rpx;
  color: var(--muted);
  text-align: center;
}
