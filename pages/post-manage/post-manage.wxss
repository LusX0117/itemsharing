page {
  height: 100vh;
  background:
    radial-gradient(circle at top right, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  color: var(--ink);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 22rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.tip-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.tip-desc {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 22rpx;
  line-height: 1.5;
}

.tabs {
  display: flex;
  gap: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 10rpx;
  border-radius: 12rpx;
  background: #edf5f3;
  color: #2e6059;
  font-size: 23rpx;
  font-weight: 600;
}

.tab.active {
  background: var(--brand);
  color: #ffffff;
}

.manage-item {
  padding: 20rpx;
}

.manage-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.manage-name {
  flex: 1;
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
  line-height: 1.35;
}

.manage-status {
  font-size: 20rpx;
  color: #0f766e;
  background: #dff3ee;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.manage-status.hidden {
  color: #b45309;
  background: #fef3c7;
}

.manage-meta {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: var(--muted);
  line-height: 1.4;
}

.manage-reason {
  margin-top: 8rpx;
  font-size: 21rpx;
  color: #b45309;
}

.manage-btn {
  margin-top: 10rpx;
  background: var(--brand) !important;
  color: #ffffff !important;
  min-width: 170rpx;
}

.empty {
  text-align: center;
  color: var(--muted);
}
