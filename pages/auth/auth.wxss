page {
  min-height: 100vh;
  background:
    radial-gradient(circle at top left, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
}

.page {
  padding: 24rpx;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.switcher {
  display: flex;
  gap: 16rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 14rpx;
  background: #edf5f3;
  color: #2e6059;
  font-size: 26rpx;
  font-weight: 600;
}

.tab.active {
  background: var(--brand);
  color: #ffffff;
}

.form-input {
  width: 100%;
  background: var(--surface-soft);
  border-radius: 14rpx;
  height: 88rpx;
  padding: 0 22rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 8rpx;
  background: var(--brand) !important;
}
