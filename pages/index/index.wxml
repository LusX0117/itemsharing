<navigation-bar title="主页" back="{{false}}" color="black" background="#f8fbff"></navigation-bar>

<scroll-view class="scrollarea" scroll-y>
  <view class="page">
    <view class="section-title">物品列表</view>
    <view wx:if="{{items.length === 0}}" class="empty card">暂无可出借物品</view>
    <view wx:for="{{items}}" wx:key="id" class="card item-card">
      <view class="item-header">
        <view>
          <view class="item-title">{{item.title}}</view>
          <view class="item-owner">{{item.owner}}</view>
        </view>
        <view class="badge">{{item.status}}</view>
      </view>
      <view class="item-description">{{item.description}}</view>
      <view class="item-tags">
        <text class="tag">{{item.category}}</text>
        <text class="tag">{{item.location}}</text>
      </view>
      <view class="item-footer">
        <view class="item-price">租金 ¥{{item.price}}/天 · 押金 ¥{{item.deposit}}</view>
        <button class="action-btn" size="mini" data-id="{{item.id}}" bindtap="applyBorrow">申请借用</button>
      </view>
    </view>

    <view class="section-title">求借列表</view>
    <view wx:if="{{demands.length === 0}}" class="empty card">暂无求借信息</view>
    <view wx:for="{{demands}}" wx:key="id" class="card demand-card">
      <view class="demand-title">{{item.title}}</view>
      <view class="demand-meta">{{item.publisher}} · {{item.location}}</view>
      <view class="demand-meta">预算：¥{{item.budget}} · 分类：{{item.category}}</view>
      <view class="demand-reward">{{item.reward}}</view>
      <view class="demand-desc">{{item.description}}</view>
    </view>
  </view>
</scroll-view>
