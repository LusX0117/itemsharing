page {
  height: 100vh;
  background:
    radial-gradient(circle at top left, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 18rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.empty {
  text-align: center;
  color: var(--muted);
}

.auth-btn {
  margin-top: 14rpx;
  background: var(--brand) !important;
  color: #fff !important;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 8rpx;
}

.session-card {
  display: flex;
  flex-direction: column;
}

.session-head-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.session-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
}

.session-status {
  font-size: 22rpx;
  color: var(--brand);
  background: var(--brand-weak);
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
}

.session-meta {
  color: var(--muted);
  font-size: 22rpx;
  margin-top: 6rpx;
}

.session-role {
  color: #b45309;
  font-size: 22rpx;
  margin-top: 4rpx;
}

.session-unread {
  min-width: 34rpx;
  height: 34rpx;
  padding: 0 10rpx;
  border-radius: 999rpx;
  background: #dc2626;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  box-sizing: border-box;
}

.chat-btn {
  margin: 0;
  margin-left: auto;
  background: var(--brand) !important;
  color: #ffffff !important;
}

.session-action-row {
  margin-top: 14rpx;
  display: flex;
  justify-content: flex-end;
}
