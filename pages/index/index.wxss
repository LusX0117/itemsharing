page {
  height: 100vh;
  background: #f3f6fb;
  color: #1f2937;
}

.scrollarea {
  height: 100%;
}

.page {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(15, 23, 42, 0.06);
}

.hero {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(120deg, #dbeafe, #eff6ff);
}

.hero-title {
  font-size: 34rpx;
  font-weight: 700;
}

.hero-subtitle {
  margin-top: 8rpx;
  color: #475569;
  font-size: 24rpx;
}

.publish-btn {
  background: #2563eb !important;
  color: #ffffff !important;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
}

.stat {
  margin: 0;
  text-align: center;
}

.stat-value {
  font-size: 38rpx;
  font-weight: 700;
  color: #1d4ed8;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.search-input {
  padding: 16rpx 20rpx;
  border-radius: 14rpx;
  background: #f8fafc;
  font-size: 26rpx;
}

.category-scroll {
  margin-top: 16rpx;
  white-space: nowrap;
}

.category-pill {
  display: inline-block;
  margin-right: 16rpx;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: #eef2ff;
  color: #3730a3;
  font-size: 24rpx;
}

.category-pill.active {
  background: #2563eb;
  color: #fff;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  margin: 16rpx 0;
}

.item-card {
  margin-bottom: 18rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
}

.item-owner {
  margin-top: 8rpx;
  color: #64748b;
  font-size: 22rpx;
}

.item-description {
  margin: 18rpx 0;
  color: #334155;
  font-size: 24rpx;
}

.item-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  padding: 6rpx 14rpx;
  color: #334155;
}

.badge {
  font-size: 20rpx;
  color: #1d4ed8;
  background: #dbeafe;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

.item-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #0f172a;
  font-size: 24rpx;
}

.action-btn {
  background: #1d4ed8 !important;
  color: #ffffff !important;
}

.empty {
  text-align: center;
  color: #64748b;
}

.demand-card {
  margin-bottom: 14rpx;
}

.demand-title {
  font-size: 28rpx;
  font-weight: 600;
}

.demand-meta {
  color: #64748b;
  margin-top: 8rpx;
  font-size: 22rpx;
}

.demand-reward {
  margin-top: 8rpx;
  color: #0f766e;
  font-size: 24rpx;
}

.mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.55);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 99;
}

.publish-panel {
  width: 100%;
  background: #fff;
  border-radius: 28rpx 28rpx 0 0;
  padding: 28rpx 24rpx 34rpx;
}

.panel-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 18rpx;
}

.panel-input,
.panel-picker,
.panel-textarea {
  width: 100%;
  background: #f8fafc;
  border-radius: 14rpx;
  padding: 14rpx 18rpx;
  font-size: 24rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
}

.panel-textarea {
  min-height: 130rpx;
}

.panel-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}
