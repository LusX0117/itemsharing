page {
  height: 100vh;
  background:
    radial-gradient(circle at top right, #eaf7f4 0%, rgba(234, 247, 244, 0) 40%),
    linear-gradient(180deg, #f9fbf8 0%, #f4f7f3 100%);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.scrollarea {
  flex: 1;
  min-height: 0;
}

.page {
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid var(--line);
  box-shadow: 0 10rpx 28rpx rgba(15, 23, 42, 0.05);
}

.profile-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  background: var(--brand-weak);
  color: #0f766e;
  font-size: 34rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.profile-content {
  flex: 1;
  min-width: 0;
}

.name {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.role-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #dff3ee;
  color: #0f766e;
}

.meta {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 24rpx;
}

.stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.stat {
  margin-bottom: 0;
  text-align: center;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
}

.value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--brand);
}

.label {
  margin-top: 8rpx;
  color: var(--muted);
  font-size: 22rpx;
}

.actions button {
  margin-top: 12rpx;
}

.auth-btn {
  background: var(--brand) !important;
  color: #ffffff !important;
}

.msg-btn {
  background: #b45309 !important;
  color: #ffffff !important;
}

.manage-btn {
  background: #0369a1 !important;
  color: #ffffff !important;
}

.logout-btn {
  background: #64748b !important;
  color: #ffffff !important;
}
